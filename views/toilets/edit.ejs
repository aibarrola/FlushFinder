<%-include ("../partials/header")%>

<!-- FORM TO EDIT TOILET -->

<div class="ui grid container">
    <div class="eight wide centered column">
        <form class="ui huge segment form" action="/toilets/<%=toilet._id%>?_method=PUT" method="POST">
            <h2 class="ui dividing header"> Editing Toilet </h2>
            <div class="fields">
                <div class="required twelve wide field">
                    <label> Toilet Name </label>
                    <input type="text" name="name" value="<%=toilet.name%>" required>
                </div>
                <div class="required four wide field">
                    <label> Type </label>
                    <select name="type" class="ui icon dropdown"  required>
                        <option value="<%=toilet.type%>" > <%=toilet.type%>  </option>
                        <% if(toilet.type === "Private"){ %>
                            <option value="Public" class="lock open icon"> Public</option>
                        <% }else{ %>
                            <option value="Private" class="unlock open icon"> Private</option>
                        <% } %>
                        <div class="item">
                            <i class="attention icon"></i>
                            Important
                          </div>
                      </select>
                </div>
            </div>
            
      
            <div class="required field">
                <label> Address </label>
                <input type="text" name="address" value="<%=toilet.address%>" required>
            </div>

            <!-- THIS DOESN'T UPDATE THE THE CHECKBOX -->
            <div class="fields">       
                <div class="four wide field">
                    <label> <i class="male icon"></i> Male </label>
                    <input type="checkbox" name="male" <%if(toilet.male){%> checked="checked" <% } %> >
                </div>
                <div class="four wide field">
                    <label> <i class="female icon"></i> Female </label>
                    <input type="checkbox" name="female" <%if(toilet.female){%> checked="checked" <% } %> >                    
                </div>
                <div class="eight wide field">
                    <label> <i class="handicap icon"> </i> Handicap accessible </label>
                    <input type="checkbox" name="handicap" <%if(toilet.handicap){%> checked="checked" <% }%> >                    
                </div>             
            </div>

            <div class="fields">
                <div class="required field">
                    <label> Toilets </label>
                    <input type="number" name="toilet" min="0" value="<%=toilet.toilet%>" required> 
                </div>
                <div class="required field">
                    <label> Urinals </label>
                    <input type="number" name="urinal" min="0" value="<%=toilet.urinal%>" required> 
                </div>
                <div class="required field">
                    <label> Sinks </label>
                    <input type="number" name="sink" min="0" value="<%=toilet.sink%>" required> 
                </div>
            </div>
          
            <div class="required field">
                <label> Upload image</label>
                <input type="text" name="image" placeholder="Image URL" value="<%=toilet.image%>" required>
            </div>
            
            <div class="field">
                    <button class="ui button blue"> Update Toilet </button>
            </div>
        </form>
    </div>
</div>

<%-include ("../partials/footer")%>
