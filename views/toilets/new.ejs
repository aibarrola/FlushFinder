<%-include ("../partials/header")%>

<!-- FORM TO ADD A NEW TOILET -->

<div class="ui grid container">
    <div class="five wide centered column">
        <form class="ui huge form segment" action="/" method="POST">
            <h2 class="ui dividing header"> Adding Toilet </h2>
            <div class="required field">
                <label> Toilet Name </label>
                <input type="text" name="name" required>
            </div>
            <div class="required field">
                <label> Address </label>
                <input type="text" name="address"required>
            </div>
            <div class="required field">
                <label> Type </label>
                <select name="type" class="ui dropdown" required>
                    <option value="" >  </option>
                    <option value="Public" >Public</option>
                    <option value="Private">Private</option>
                  </select>
            </div>

            <div class="required field">
                <label> Amenities </label>
                <select name="skills" multiple="" class="ui fluid dropdown">
                    <option value="">Amenities</option>
                  <option value="angular">Wifi</option>
                  <option value="css">Febreeze Spray</option>
                  <option value="design"> Baby Changing Table</option>
                  <option value="ember">Ember</option>
                </select>
            </div>
          
            <div class="required field">
                <label> Upload image</label>
                <input type="text" name="image" placeholder="Image URL" required>
            </div>
            
            <div class="field">
                <button class="ui right floated button blue"> Add Toilet </button>
            </div>
        </form>
    </div>
</div>

<%-include ("../partials/footer")%>
